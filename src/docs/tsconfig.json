{
  "compilerOptions": {
    "target": "ES2015",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist/types",
    "noEmit": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["../../components/src/*"],
      "@lib/*": ["../../lib/src/*"]
    }
  }
}
